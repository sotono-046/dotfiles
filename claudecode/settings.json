{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Read(/Users/sotono/dotfiles/**)",
      "Write(/Users/sotono/dotfiles/**)",
      "Edit(/Users/sotono/dotfiles/**)",
      "Read(/Users/sotono/.claude/skills/**)",
      "Read(/Users/sotono/.codex/skills/**)",
      "Read(/Users/sotono/.cursor/skills-cursor/**)",
      "mcp__serena",
      "mcp__playwright",
      "mcp__codex"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(git push:*)",
      "Bash(gh pr:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh release:*)",
      "Read(/Users/sotono/**)",
      "Write(/Users/sotono/**)",
      "Edit(/Users/sotono/**)"
    ],
    "defaultMode": "default"
  },
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Pop.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": false,
  "plansDirectory": "./.temp/plans",
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  }
}