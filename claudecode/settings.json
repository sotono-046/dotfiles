{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "alwaysThinkingEnabled": false,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "afplay /System/Library/Sounds/Pop.aiff",
            "type": "command"
          }
        ],
        "matcher": ""
      },
      {
        "hooks": [
          {
            "command": "/Users/sotono/.caudex/hooks/session-hook.sh",
            "type": "command"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "/Users/sotono/.caudex/hooks/session-hook.sh",
            "type": "command"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "/Users/sotono/.caudex/hooks/session-hook.sh",
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "/Users/sotono/.caudex/hooks/session-hook.sh",
            "type": "command"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "afplay /System/Library/Sounds/Hero.aiff",
            "type": "command"
          }
        ],
        "matcher": ""
      },
      {
        "hooks": [
          {
            "command": "/Users/sotono/.caudex/hooks/session-hook.sh",
            "type": "command"
          }
        ]
      }
    ]
  },
  "language": "Japanese",
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Read(/Users/sotono/dotfiles/**)",
      "Write(/Users/sotono/dotfiles/**)",
      "Edit(/Users/sotono/dotfiles/**)",
      "Bash(/Users/sotono/dotfiles/**)",
      "Read(/Users/sotono/.claude/skills/**)",
      "Read(/Users/sotono/.codex/skills/**)",
      "Read(/Users/sotono/.cursor/skills-cursor/**)",
      "mcp__serena",
      "mcp__playwright",
      "mcp__codex"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(git push:*)",
      "Bash(gh pr:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh release:*)",
      "Read(/Users/sotono/**)",
      "Write(/Users/sotono/**)",
      "Edit(/Users/sotono/**)"
    ],
    "defaultMode": "default",
    "deny": []
  },
  "plansDirectory": "./.temp/plans",
  "statusLine": {
    "command": "bunx -y ccstatusline@latest",
    "padding": 0,
    "type": "command"
  }
}